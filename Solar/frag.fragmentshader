#version 330 core
out vec4 FragColor;

in vec3 FragPos;
in vec3 Normal;

struct Light {
    vec3 position;
    vec3 diffuse;
    vec3 ambient;
};

uniform Light light;

void main(){
    vec3 norm = normalize(Normal);
    vec3 lightDir = normalize(light.position - FragPos);
    float diff = max(dot(norm, lightDir), 0.0);
    vec3 diffuse = light.diffuse * diff * vec3(0.5, 0.1, 0.1);  
    vec3 ambient = light.ambient * vec3(0.5, 0.1, 0.1);

    FragColor = vec4(diffuse + ambient, 1.0f);
}